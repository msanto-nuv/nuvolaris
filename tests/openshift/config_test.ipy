import nuvolaris.config as cfg
import nuvolaris.kube as kube
import nuvolaris.testutil as tu

import os

cfg.clean()

spec = tu.load_sample_config("openshift/whisk")
cfg.configure(spec)
cfg.detect()

assert(cfg.get("nuvolaris.kube")=="openshift")
assert(cfg.get("operator.image") == os.environ["OPERATOR_IMAGE"])
assert(cfg.get("operator.tag") == os.environ["OPERATOR_TAG"])
assert(cfg.get("nuvolaris.storageClass")=="gp2")

cfg.getall("couchdb")