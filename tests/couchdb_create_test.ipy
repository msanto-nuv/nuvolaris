import nuvolaris.couchdb as cdb
import nuvolaris.config as cfg
import nuvolaris.testutil as tu

cfg.clean()
assert(cfg.configure(tu.load_sample_config()))
cfg.detect()
cfg.put("couchdb.host", "couchdb")

print(cfg.getall("operator"))

cdb.create()

#kubectl get po -l name=couchdb -o=jsonpath='{..status.phase}'
#kubectl get po -l job-name=couchdb-init -o=jsonpath='{..status.phase}' 

r = !kubectl wait po -l name=couchdb --for=jsonpath='{.status.phase}=Running'
assert(r[0].find("condition met")!= -1)

r = !kubectl wait po -l job-name=couchdb-init --for=jsonpath='{.status.phase}=Succeeded'
assert(r[0].find("condition met")!= -1)

